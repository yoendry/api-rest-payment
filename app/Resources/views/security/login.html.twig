{% extends 'base.html.twig' %}

{% block body %}

<div class="container">

    {{ form_start(form_login, { 'attr': {'class': 'col-sm-6'} }) }}
        <h3>Login</h3>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="row">
            <div class="col-sm-6">          
                <div class="form-group">
                    {{ form_label(form_login._username) }}
                    {{ form_errors(form_login._username) }}
                    {{ form_widget(form_login._username, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">          
                <div class="form-group">
                    {{ form_label(form_login._password) }}
                    {{ form_errors(form_login._password) }}
                    {{ form_widget(form_login._password, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>   
        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account"/>
        #} 
        <input type="submit" value="Login" class="btn btn-success" />
    {{ form_end(form_login) }}
</div> 
{% endblock %}