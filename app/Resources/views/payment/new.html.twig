{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
    <h1>Creaci√≥n de Pago</h1>
	
    {{ form_start(form,{ 'attr': {'class': 'col-sm-4'} }) }}
	<div class="form-group">
		{{ form_label(form.paymentDate) }}
		{{ form_errors(form.paymentDate) }}
		{{ form_widget(form.paymentDate,{ 'attr': {'class': 'form-control'} }) }}
	</div>
	<div class="form-group">
		{{ form_label(form.amount) }}
		{{ form_errors(form.amount) }}
		{{ form_widget(form.amount,{ 'attr': {'class': 'form-control'} }) }}
	</div>
	<div class="form-group">
		{{ form_label(form.externalReference) }}
		{{ form_errors(form.externalReference) }}
		{{ form_widget(form.externalReference,{ 'attr': {'class': 'form-control'} }) }}
	</div>
	<div class="form-group">
		{{ form_label(form.terminal) }}
		{{ form_errors(form.terminal) }}
		{{ form_widget(form.terminal,{ 'attr': {'class': 'form-control'} }) }}
	</div>
	<div class="form-group">
		{{ form_label(form.reference) }}
		{{ form_errors(form.reference) }}
		{{ form_widget(form.reference,{ 'attr': {'class': 'form-control'} }) }}
	</div>
	<div class="form-group">
		{{ form_label(form.company) }}
		{{ form_errors(form.company) }}
		{{ form_widget(form.company, { 'attr': {'class': 'form-control selectpicker'} }) }}
	</div>
