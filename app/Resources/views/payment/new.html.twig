		{{ form_errors(form.paymentMethod) }}
		{{ form_widget(form.paymentMethod, { 'attr': {'class': 'form-control selectpicker'} }) }}
	</div>
	<div class="form-group">
		{{ form_label(form.status) }}
		{{ form_errors(form.status) }}
		{{ form_widget(form.status, { 'attr': {'class': 'form-control selectpicker'} }) }}
