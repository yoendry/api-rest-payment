{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h3>Editar Pago : {{ payment.id }}</h3>

    {{ form_start(edit_form,{ 'attr': {'class': 'col-sm-4'} }) }}
        <div class="form-group">
		{{ form_label(edit_form.paymentDate) }}
		{{ form_errors(edit_form.paymentDate) }}
		{{ form_widget(edit_form.paymentDate,{ 'attr': {'class': 'form-control'} }) }}
	</div>
	<div class="form-group">
		{{ form_label(edit_form.amount) }}
		{{ form_errors(edit_form.amount) }}
		{{ form_widget(edit_form.amount,{ 'attr': {'class': 'form-control'} }) }}
	</div>
	<div class="form-group">
		{{ form_label(edit_form.externalReference) }}
		{{ form_errors(edit_form.externalReference) }}
		{{ form_widget(edit_form.externalReference,{ 'attr': {'class': 'form-control'} }) }}
	</div>
	<div class="form-group">
		{{ form_label(edit_form.terminal) }}
		{{ form_errors(edit_form.terminal) }}
		{{ form_widget(edit_form.terminal,{ 'attr': {'class': 'form-control'} }) }}
	</div>
	<div class="form-group">
		{{ form_label(edit_form.reference) }}
		{{ form_errors(edit_form.reference) }}
		{{ form_widget(edit_form.reference,{ 'attr': {'class': 'form-control'} }) }}
	</div>
	<div class="form-group">
		{{ form_label(edit_form.company) }}
		{{ form_errors(edit_form.company) }}
		{{ form_widget(edit_form.company, { 'attr': {'class': 'form-control selectpicker'} }) }}
	</div>
	<div class="form-group">
		{{ form_label(edit_form.paymentMethod) }}
		{{ form_errors(edit_form.paymentMethod) }}
		{{ form_widget(edit_form.paymentMethod, { 'attr': {'class': 'form-control selectpicker'} }) }}
	</div>
	<div class="form-group">
		{{ form_label(edit_form.status) }}
		{{ form_errors(edit_form.status) }}
		{{ form_widget(edit_form.status, { 'attr': {'class': 'form-control selectpicker'} }) }}
	</div>
	<a href="{{ path('payment_show',{ 'id': payment.id })}}" class="btn btn-info">Volver</a>
        <input type="submit" value="Editar"class="btn btn-success" />
    {{ form_end(edit_form) }}

</div>
{% endblock %}
