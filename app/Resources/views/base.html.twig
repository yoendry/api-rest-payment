<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Pagos{% endblock %}</title>
        {% block stylesheets %}
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
	{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
	{% block header %}
		<nav class="navbar navbar-default">
		  <div class="container-fluid">
	      	{% if is_granted(['ROLE_ADMIN','ROLE_USER']) %}
			    <ul class="nav navbar-nav">
			      <li><a href="{{ path('payment_index') }}">Inicio</a></li>
			      	<li><a href="{{ path('payment_new') }}">Crear Nuevo Pago</a></li>
			      	<li><a href="{{ path('payment_search_advance') }}">Busqueda Avanzada</a></li>
			    </ul>		    
		    {% endif %}
		  </div>
		</nav>
	{% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}
		<!-- jQuery library -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

		<!-- Latest compiled JavaScript -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>	
		<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
	{% endblock %}
    </body>
</html>
